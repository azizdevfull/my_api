<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Views:</strong>
    <%= pluralize(post.views, "view") %>
  </p>

  <p>
    <strong>Posted by:</strong>
    <%= post.user.email %>
  </p>

</div>
